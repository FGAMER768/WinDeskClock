<Page x:Class="WinDeskClock.Clocks.FluentClock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WinDeskClock.Clocks"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="619" d:DesignWidth="614"
      Title="FluentClock">

    <Grid>
        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border x:Name="TimeBorder"
                    Padding="20"
                    CornerRadius="8,8,0,0"
                    Background="#0affffff"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Grid x:Name="TimeGrid"
                      Grid.Row="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20"
                                          x:Name="ClockGridSecondCol1" />
                        <ColumnDefinition Width="*"
                                          x:Name="ClockGridSecondCol2" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0"
                          Grid.Row="0"
                          ClipToBounds="True">
                        <TextBlock x:Name="H1Text"
                                   Text="1"
                                   FontSize="200"
                                   Width="110"
                                   Height="180"
                                   LineHeight="200"
                                   LineStackingStrategy="BlockLineHeight"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI Variable Display SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Column="1"
                          Grid.Row="0"
                          ClipToBounds="True">
                        <TextBlock x:Name="H2Text"
                                   Text="7"
                                   FontSize="200"
                                   Width="110"
                                   Height="180"
                                   LineHeight="200"
                                   LineStackingStrategy="BlockLineHeight"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI Variable Display SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Column="0"
                          Grid.Row="1"
                          ClipToBounds="True">
                        <TextBlock x:Name="M1Text"
                                   Text="2"
                                   FontSize="200"
                                   Width="110"
                                   Height="180"
                                   LineHeight="200"
                                   LineStackingStrategy="BlockLineHeight"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI Variable Display SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Column="1"
                          Grid.Row="1"
                          ClipToBounds="True">
                        <TextBlock x:Name="M2Text"
                                   Text="0"
                                   FontSize="200"
                                   Width="110"
                                   Height="180"
                                   LineHeight="200"
                                   LineStackingStrategy="BlockLineHeight"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI Variable Display SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Column="3"
                          Grid.Row="0"
                          ClipToBounds="True">
                        <TextBlock x:Name="S1Text"
                                   Text="0"
                                   FontSize="200"
                                   Width="110"
                                   Height="180"
                                   LineHeight="200"
                                   LineStackingStrategy="BlockLineHeight"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI Variable Display SemiLight"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Column="3"
                          Grid.Row="1"
                          ClipToBounds="True">
                        <TextBlock x:Name="S2Text"
                                   Text="0"
                                   FontSize="200"
                                   Width="110"
                                   Height="180"
                                   LineHeight="200"
                                   LineStackingStrategy="BlockLineHeight"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI Variable Display SemiLight"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
            <Border x:Name="DateBorder"
                    Padding="10"
                    CornerRadius="0,0,8,8"
                    Background="#50000000"
                    Grid.Row="1"
                    VerticalAlignment="Top">
                <Grid x:Name="DateGrid"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center"
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10"
                                          x:Name="DateGridYearCol1" />
                        <ColumnDefinition Width="Auto"
                                          x:Name="DateGridYearCol2" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="DNameText"
                               Text="MON"
                               Grid.Column="0"
                               FontSize="42"
                               FontFamily="Segoe UI Variable Display SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="0" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="DDayText"
                               Text="7"
                               Grid.Column="2"
                               FontSize="42"
                               FontFamily="Segoe UI Variable Display Regular"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="0" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="DMonthText"
                               Text="AUG"
                               Grid.Column="4"
                               FontSize="42"
                               FontFamily="Segoe UI Variable Display Regular"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="0" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="DYearText"
                               Text="2006"
                               Grid.Column="6"
                               FontSize="42"
                               FontFamily="Segoe UI Variable Display Regular"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="0" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
