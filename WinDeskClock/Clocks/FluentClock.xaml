<Page x:Class="WinDeskClock.Clocks.FluentClock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WinDeskClock.Clocks"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="619"
      d:DesignWidth="614"
      Title="FluentClock">

    <Grid>
        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border x:Name="TimeBorder"
                    CornerRadius="8"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Grid x:Name="TimeGrid"
                      Grid.Row="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10"
                                          x:Name="ClockGridSecondCol1" />
                        <ColumnDefinition Width="*"
                                          x:Name="ClockGridSecondCol2" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border Grid.ColumnSpan="2"
                            Padding="10"
                            CornerRadius="8"
                            Background="#0affffff"
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0"
                                  Grid.Row="0"
                                  ClipToBounds="True"
                                  Margin="5">
                                <TextBlock x:Name="H1Text"
                                           Text="1"
                                           FontSize="200"
                                           Width="110"
                                           Height="180"
                                           LineHeight="200"
                                           LineStackingStrategy="BlockLineHeight"
                                           TextAlignment="Center"
                                           FontFamily="Segoe UI Variable Display SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="0" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                            <Grid Grid.Column="1"
                                  Grid.Row="0"
                                  ClipToBounds="True"
                                  Margin="5">
                                <TextBlock x:Name="H2Text"
                                           Text="7"
                                           FontSize="200"
                                           Width="110"
                                           Height="180"
                                           LineHeight="200"
                                           LineStackingStrategy="BlockLineHeight"
                                           TextAlignment="Center"
                                           FontFamily="Segoe UI Variable Display SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="0" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                    <Border Grid.ColumnSpan="2"
                            Padding="10"
                            CornerRadius="8"
                            Background="#0affffff"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0"
                                  Grid.Row="2"
                                  ClipToBounds="True"
                                  Margin="5">
                                <TextBlock x:Name="M1Text"
                                           Text="2"
                                           FontSize="200"
                                           Width="110"
                                           Height="180"
                                           LineHeight="200"
                                           LineStackingStrategy="BlockLineHeight"
                                           TextAlignment="Center"
                                           FontFamily="Segoe UI Variable Display SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="0" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                            <Grid Grid.Column="1"
                                  Grid.Row="2"
                                  ClipToBounds="True"
                                  Margin="5">
                                <TextBlock x:Name="M2Text"
                                           Text="0"
                                           FontSize="200"
                                           Width="110"
                                           Height="180"
                                           LineHeight="200"
                                           LineStackingStrategy="BlockLineHeight"
                                           TextAlignment="Center"
                                           FontFamily="Segoe UI Variable Display SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="0" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                    <Border Grid.Column="3"
                            Padding="10"
                            CornerRadius="8,8,0,0"
                            Background="#0affffff"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Grid Grid.Column="3"
                              Grid.Row="0"
                              ClipToBounds="True"
                              Margin="5">
                            <TextBlock x:Name="S1Text"
                                       Text="0"
                                       FontSize="200"
                                       Width="110"
                                       Height="180"
                                       LineHeight="200"
                                       LineStackingStrategy="BlockLineHeight"
                                       TextAlignment="Center"
                                       FontFamily="Segoe UI Variable Display SemiLight"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform X="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                    </Border>
                    <Border Grid.Column="3"
                            Grid.Row="1"
                            CornerRadius="0"
                            Background="#0affffff"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch" />
                    <Border Grid.Column="3"
                            Padding="10"
                            Grid.Row="2"
                            CornerRadius="0,0,8,8"
                            Background="#0affffff"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Grid Grid.Column="3"
                              Grid.Row="2"
                              ClipToBounds="True"
                              Margin="5">
                            <TextBlock x:Name="S2Text"
                                       Text="0"
                                       FontSize="200"
                                       Width="110"
                                       Height="180"
                                       LineHeight="200"
                                       LineStackingStrategy="BlockLineHeight"
                                       TextAlignment="Center"
                                       FontFamily="Segoe UI Variable Display SemiLight"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform X="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Border x:Name="DateBorder"
                    CornerRadius="8"
                    Background="Transparent"
                    Grid.Row="2"
                    VerticalAlignment="Top">
                <Grid x:Name="DateGrid"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch" 
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"
                                          x:Name="DateGridCol1"/>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="260"
                                          x:Name="DateGridCol2" />
                    </Grid.ColumnDefinitions>
                    <Border Background="#0affffff"
                            CornerRadius="8"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Padding="10"
                            Grid.Column="0">
                        <TextBlock x:Name="DNameText"
                                   HorizontalAlignment="Center"
                                   Text="MON"
                                   Grid.Column="0"
                                   FontSize="42"
                                   FontFamily="Segoe UI Variable Display SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Border>
                    <Border Background="#0affffff"
                            CornerRadius="8"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Padding="10"
                            Grid.Column="2">
                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10"
                                                  x:Name="DateGridYearCol1" />
                                <ColumnDefinition Width="Auto"
                                                  x:Name="DateGridYearCol2" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="DDayText"
                                       Text="7"
                                       Grid.Column="0"
                                       FontSize="42"
                                       FontFamily="Segoe UI Variable Display Regular"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="DMonthText"
                                       Text="AUG"
                                       Grid.Column="2"
                                       FontSize="42"
                                       FontFamily="Segoe UI Variable Display Regular"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="DYearText"
                                       Text="2006"
                                       Grid.Column="4"
                                       FontSize="42"
                                       FontFamily="Segoe UI Variable Display Regular"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
